extends layouts/main-layout.pug     

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item 
                        header.card__header 
                            h1.product__title #{product.title}
                        .card__image 
                            img(src="https://profissionaisdolivro.com.br/assets/newstyle/banner-image-capa-5037dd1cb41e039d3e950d6b1f2c04a762efebbb6ad40117cbda1cd9161f876b.png", alt="A book")
                        .card__content 
                            h2.product__price $19.99
                            p.product__description A very interesting obok about so many even more crazy stuff 
                        .card__actions 
                            button.btn Add to Cart
        else   
            h1 No Products
